generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  avatarUrl  String?
  role       Role     @default(USER)
  streams    Stream[] @relation("StreamerStreams")
  payments   Payment[] @relation("UserPayments")
  createdAt  DateTime @default(now())
}

model Stream {
  id          String     @id @default(cuid())
  title       String
  description String?
  streamLink  String?
  isLive      Boolean    @default(true)
  streamer    User       @relation("StreamerStreams", fields: [streamerId], references: [id])
  streamerId  String
  payments    Payment[]  @relation("StreamPayments")
  createdAt   DateTime   @default(now())
}

model Payment {
  id         String    @id @default(cuid())
  amount     Float
  message    String?
  user       User      @relation("UserPayments", fields: [userId], references: [id])
  userId     String
  stream     Stream    @relation("StreamPayments", fields: [streamId], references: [id])
  streamId   String
  createdAt  DateTime  @default(now())
}

enum Role {
  ADMIN
  STREAMER
  USER
}